<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <EditText
        android:id="@+id/ED_GESTOR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/AMARILLO"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:gravity="center|center_horizontal"
        android:hint="@string/GESTOR"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/ED_FECHA"
        app:layout_constraintStart_toStartOf="@+id/SP_COMODIN"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ED_FECHA"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@android:color/holo_orange_light"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:gravity="center|center_horizontal"
        android:hint="@string/FECHA"
        android:inputType="date"
        android:maxLines="1"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/BT_FECHA"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/ED_GESTOR"
        app:layout_constraintTop_toTopOf="@+id/ED_GESTOR" />

    <Spinner
        android:id="@+id/SP_CLIENTES"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/spiner_style"
        android:clickable="true"
        android:spinnerMode="dialog"
        android:stateListAnimator="@android:animator/fade_in"
        app:layout_constraintBottom_toTopOf="@+id/ED_HORA_ENTRADA"
        app:layout_constraintEnd_toEndOf="@+id/SP_COMODIN"
        app:layout_constraintStart_toStartOf="@+id/ED_GESTOR"
        app:layout_constraintTop_toBottomOf="@+id/ED_GESTOR"
        app:layout_constraintVertical_bias="0.12" />

    <EditText
        android:id="@+id/ED_HORA_ENTRADA"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/Color_coral_red"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:gravity="clip_horizontal|center_horizontal|center_vertical"
        android:hint="00:00"
        android:inputType="time"
        android:text="@string/hora"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ED_HORA_SALIDA"
        app:layout_constraintEnd_toStartOf="@+id/BT_ENTRADA"
        app:layout_constraintStart_toStartOf="@+id/SP_CLIENTES"
        app:layout_constraintTop_toBottomOf="@+id/SP_COMODIN" />

    <Button
        android:id="@+id/BT_ENTRADA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/purple_500"
        android:drawableLeft="@android:drawable/ic_menu_recent_history"
        android:gravity="center"
        android:text="@string/ENTRADA"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/BT_SALIDA"
        app:layout_constraintEnd_toEndOf="@+id/SP_COMODIN"
        app:layout_constraintStart_toEndOf="@+id/ED_HORA_ENTRADA"
        app:layout_constraintTop_toBottomOf="@+id/SP_COMODIN" />

    <EditText
        android:id="@+id/ED_HORA_SALIDA"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/teal_200"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal|center_vertical"
        android:hint="00:00"
        android:inputType="time"
        android:text="@string/hora"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/BT_SALIDA"
        app:layout_constraintEnd_toEndOf="@+id/ED_HORA_ENTRADA"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ED_HORA_ENTRADA"
        app:layout_constraintTop_toBottomOf="@+id/ED_HORA_ENTRADA" />

    <Button
        android:id="@+id/BT_SALIDA"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@color/purple_500"
        android:drawableLeft="@android:drawable/ic_menu_recent_history"
        android:gravity="center"
        android:text="@string/SALIDA"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/ED_OBSERVACIONES"
        app:layout_constraintEnd_toEndOf="@+id/BT_ENTRADA"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/BT_ENTRADA"
        app:layout_constraintTop_toBottomOf="@+id/BT_ENTRADA" />

    <EditText
        android:id="@+id/ED_OBSERVACIONES"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/Color_GRIS_perla"
        android:ems="10"
        android:gravity="start"
        android:hint="OBSERVACIONES"
        android:inputType="textPersonName"
        android:maxLines="10"
        android:minLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/SP_COMODIN"
        app:layout_constraintStart_toStartOf="@+id/SP_COMODIN"
        app:layout_constraintTop_toBottomOf="@+id/BT_SALIDA" />

    <Spinner
        android:id="@+id/SP_COMODIN"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/spiner_style"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toTopOf="@+id/ED_HORA_ENTRADA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_CLIENTES"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/BT_FECHA"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:src="@android:drawable/ic_menu_today"
        app:layout_constraintBottom_toTopOf="@+id/SP_CLIENTES"
        app:layout_constraintEnd_toEndOf="@+id/SP_CLIENTES"
        app:layout_constraintStart_toEndOf="@+id/ED_FECHA"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="1dp"
        android:maxLines="1"
        android:text="@string/CLIENTES"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/SP_CLIENTES"
        app:layout_constraintStart_toStartOf="@+id/SP_CLIENTES" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="@string/COMODIN"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/SP_CLIENTES"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/SP_COMODIN" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/Color_GRIS_perla"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/ED_OBSERVACIONES"
        app:layout_constraintEnd_toEndOf="@+id/BT_SALIDA"
        app:layout_constraintStart_toStartOf="@+id/SP_COMODIN"
        app:layout_constraintTop_toBottomOf="@+id/BT_SALIDA" />

    <Button
        android:id="@+id/BT_EXPORTAR"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/boton_pulsado"
        android:backgroundTint="@color/Color_GRIS_perla"
        android:backgroundTintMode="screen"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:drawablePadding="15dp"
        android:text="@string/SOLICITUD"
        android:textColor="@color/Color_amarillo_reg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ED_OBSERVACIONES"
        app:layout_constraintStart_toEndOf="@+id/button_second"
        app:layout_constraintTop_toBottomOf="@+id/ED_OBSERVACIONES" />

    <Button
        android:id="@+id/button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/CANCELAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BT_EXPORTAR"
        app:layout_constraintStart_toStartOf="@+id/ED_OBSERVACIONES"
        app:layout_constraintTop_toBottomOf="@+id/ED_OBSERVACIONES" />

</androidx.constraintlayout.widget.ConstraintLayout>